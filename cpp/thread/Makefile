# Makefile

SRCS=count_thread.cc count_thread_mutex.cc calc_multi_cond.cc
OBJS=count_thread.o count_thread_mutex.o calc_multi_cond.o
TARGET1=count-thread
TARGET2=count-thread-mutex
TARGET3=calc-multi-cond
CXX=g++

all: $(TARGET1) $(TARGET2) $(TARGET3)

dep:
	$(CXX) -MM $(SRCS) > Dependency.dep

$(OBJS): $(SRCS)
	$(CXX) -c $^ -pthread -std=c++11

$(TARGET1): count_thread.o
	$(CXX) -o $@ $^ -lpthread 

$(TARGET2): count_thread_mutex.o
	$(CXX) -o $@ $^ -lpthread 

$(TARGET3): calc_multi_cond.o
	$(CXX) -o $@ $^ -lpthread -pthread

clean:
	rm -f Dependency.dep
	rm -f *.pch
	rm -f *.gch
	rm -f *.stackdump
	rm -f *.o
	rm -f $(TARGET1)
	rm -f $(TARGET2)
	rm -f $(TARGET3)
	
ifeq (Dependency.dep, $(wildcard Dependency.dep))
include Dependency.dep
endif

