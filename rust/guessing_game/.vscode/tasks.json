{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check",
            "type": "cargo",
            "subcommand": "check",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build",
            "type": "cargo",
            "subcommand": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "run",
            "type": "cargo",
            "subcommand": "run",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "test",
            "type": "cargo",
            "subcommand": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "clean",
            "type": "cargo",
            "subcommand": "clean",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}